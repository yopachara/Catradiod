<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/dragView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__composer_black"
    android:clickable="true"
    android:focusable="false"
    android:orientation="horizontal" xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/notification_play"
        style="@style/NotificationAction.Play"
        android:src="@drawable/btn_playback_play" android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/notification_collapse"
        tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="@+id/dragView"/>

    <ImageView
        android:id="@+id/notification_collapse"
        style="@style/NotificationAction.Collapse"
        android:src="@drawable/btn_notification_collapse" android:layout_height="64dp"
        android:layout_width="60dp"
        android:layout_marginEnd="168dp" app:layout_constraintRight_toRightOf="@+id/dragView"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/notification_play"
        app:layout_constraintHorizontal_bias="0.0" tools:layout_constraintTop_creator="1"
        android:layout_marginTop="3dp" app:layout_constraintTop_toTopOf="@+id/dragView"/>


    <TextView
        android:id="@+id/textviewControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/tw__composer_white"
        android:text="RADIO STATE : IDLE"
        android:layout_marginStart="64dp"
        app:layout_constraintLeft_toRightOf="@+id/notification_collapse"
        android:layout_marginEnd="63dp" app:layout_constraintRight_toRightOf="@+id/dragView"
        app:layout_constraintBottom_toBottomOf="@+id/notification_collapse"
        app:layout_constraintTop_toTopOf="@+id/notification_collapse"
        app:layout_constraintHorizontal_bias="0.25" app:layout_constraintVertical_bias="0.57"
        tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"/>
</android.support.constraint.ConstraintLayout>